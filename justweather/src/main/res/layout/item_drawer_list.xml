<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:minHeight="60dp">

    <TextView
        android:id="@+id/tv_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:textColor="#BB000000"
        android:textSize="18sp"
        android:text="东阳"/>
    <ImageView
        android:id="@+id/item_weather"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:src="@mipmap/sunny"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/item_temp"
        android:layout_marginRight="8dp"
        android:visibility="invisible"
        />

    <TextView
        android:id="@+id/item_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignRight="@+id/view"
        android:layout_alignTop="@+id/tv_item"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:text="18°"
        android:textSize="20sp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/item_is_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@mipmap/arrow_now_city"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp"
        android:visibility="invisible"
        />
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="#ffffff"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"/>

</RelativeLayout>